<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/bg"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:id="@+id/checkoutitemImage"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="2dp">

                <TextView
                    android:id="@+id/checkoutitemname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walmart Family Mobile Apple iPhone 6s 32GB Prepaid Smartphone"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space Gray"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:id="@+id/checkoutitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 58.00"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:layout_gravity="center|left"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


<!--                    <ImageButton-->
<!--                        android:layout_width="25dp"-->
<!--                        android:layout_height="25dp"-->
<!--                        android:src="@drawable/remove_icon"-->
<!--                        android:background="@drawable/cart_page_round_buttons"-->
<!--                        android:padding="4dp"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:id="@+id/chekoutremoveqty"-->
<!--                        android:clickable="true"/>-->

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cart_page_round_buttons"
                        android:id="@+id/checkoutitemqty"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="@color/black"/>

<!--                    <ImageButton-->
<!--                        android:layout_width="25dp"-->
<!--                        android:layout_height="25dp"-->
<!--                        android:src="@drawable/add_icon"-->
<!--                        android:background="@drawable/cart_page_round_buttons"-->
<!--                        android:padding="4dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:id="@+id/chekoutaddqty"-->
<!--                        android:clickable="true" />-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
